@model RoomsCreateVm
@{
}

<h2>
    Dodawanie pokoju
</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Name">
            Nazwa
        </label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="AccessCode">
            Kod dostępu
        </label>
        <input class="form-control" asp-for="AccessCode" />
    </div>
    <div class="form-group">
        <label asp-for="BuildingId">
            Przypisany budynek
        </label>
        <select class="form-control" asp-for="BuildingId">
            @foreach (var item in Model.Buildings)
            {
                <option value="@item.Id">
                    @item.Name
                </option>
            }
        </select>
    </div>
    <button type="submit">
        wyślij formularz
    </button>
</form>